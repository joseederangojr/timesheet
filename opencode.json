{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        },
        "shadcn": {
            "type": "local",
            "command": [
                "pnpm",
                "dlx",
                "shadcn@latest",
                "mcp"
            ],
            "enabled": true
        }
    }
}